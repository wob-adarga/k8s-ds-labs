{
  "pipeline": {
    "name": "mention-grouper"
  },
  "description": "Mention grouping.",
  "transform": {
    "cmd": [ "python3", "-m", "service", "mention-grouper"],
    "image": "eu.gcr.io/adarga-docker/ds-knowledge-store-transform:1.15.0",
    "env": {
      "SERVICE_URL_BASE": "http://mentiongrouper1-15-0-default.seldon.svc.cluster.local:8000",
      "SERVICE_ENDPOINT": "api/v1.0/predictions"
    }
  },
  "input": {
    "pfs": {
      "repo": "sentence-extraction",
      "glob": "/*/*"
    }
  },
  "enable_stats": false,
  "egress": {
    "URL": "s3://adarga-ds-lab-1-pachyderm-egress/mention-grouper"
  }
}
